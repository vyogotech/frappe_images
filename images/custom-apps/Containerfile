# --- Stage 1: Builder (Installs tools and apps) ---
FROM ghcr.io/vyogotech/frappe_base:latest AS builder

USER root

# Install build dependencies required for Python packages and basic tools
RUN apt-get update && apt-get install --no-install-recommends -y \
    git \
    build-essential \
    python3-dev \
    libffi-dev \
    libmariadb-dev \
    jq \
    # Install Yarn (required for building assets)
    # We first install npm (via nodejs which is already in base or added here)
    # The base image has Node.js 20 installed.
    && npm install -g yarn \
    && rm -rf /var/lib/apt/lists/*
USER 1000
WORKDIR /home/frappe/frappe-bench

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

# ARG for apps.json - passed as base64 encoded string
ARG APPS_JSON_BASE64

# Create a dummy common_site_config.json for build to succeed
# Some apps (like HRMS) require this file to exist during build for socket.io port
RUN mkdir -p sites && \
    echo '{"socketio_port": 9000}' > sites/common_site_config.json

# Install apps from apps.json if provided
RUN if [ -n "${APPS_JSON_BASE64}" ]; then \
    echo "${APPS_JSON_BASE64}" | base64 -d > apps.json && \
    cat apps.json | jq -r 'to_entries[] | .value.url + (if .value.branch and .value.branch != "" then " --branch " + .value.branch else "" end)' > apps_list.txt && \
    while read app_args; do \
      eval "bench get-app $app_args"; \
    done < apps_list.txt; \
  fi

# Build assets for the new apps (final consolidation)
RUN bench build


# --- Stage 2: Final Image (Runtime) ---
FROM ghcr.io/vyogotech/frappe_base:latest

USER 1000
WORKDIR /home/frappe/frappe-bench



COPY --from=builder --chown=1000:0 /home/frappe/frappe-bench/apps /home/frappe/frappe-bench/apps

COPY --from=builder --chown=1000:0 /home/frappe/frappe-bench/sites/assets /home/frappe/assets_cache

# --- Register Apps in Python Environment ---
# The copied apps/ directory contains valid python packages. We must install them.
USER 1000
RUN for app_dir in apps/*; do \
    if [ -d "$app_dir" ]; then \
        if [ -f "$app_dir/setup.py" ] || [ -f "$app_dir/pyproject.toml" ]; then \
            # Use absolute path for editable install to avoid relative path issues
            abs_app_path=$(realpath "$app_dir"); \
            echo "Installing $abs_app_path in editable mode..."; \
            ./env/bin/pip install -e "$abs_app_path"; \
        else \
            echo "Skipping $app_dir (no setup.py or pyproject.toml found)"; \
        fi \
    fi \
done
